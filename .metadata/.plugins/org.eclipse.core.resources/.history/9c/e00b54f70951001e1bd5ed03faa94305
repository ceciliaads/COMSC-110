#include <iostream>
#include <iomanip>
using namespace std;

int main() {
	int i;
	i = rand();
	int die = (i % 6) + 1;
	cout << i << setw(2) << die << endl;

	i = rand();
	die = (i % 6) + 1;
	cout << i << setw(2) << die << endl;

	i = rand();
	die = (i % 6) + 1;
	cout << i << setw(2) << die << endl;

	i = rand();
	die = (i % 6) + 1;
	cout << i << setw(2) << die << endl;

	int t = time(0);
	cout << t << endl;

	return 0;
}
